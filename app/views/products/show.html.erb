<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

   
  <div class="row">
  <div class="col-sm-4">
  </div>

  <div class="col-sm-8">
    <h2>Reviews</h2> 
  </div>

</div>
  <% if @product.reviews.empty? %>
    <div class="row">
      <div class="col-sm-4">
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
        <p>There are no reviews for this product</p>
        </dl>
      </div>
    </div>
  <% else %>
  <% @product.reviews.each do |review| %>
    <div class="row">
      <div class="col-sm-4">
      </div>

      <div class="col-sm-8">
      <dl class="dl-horizontal">
        <dt>User</dt>
        <dd><%= review.user.name %></dd>
        <dt>Description</dt>
        <dd><%= review.description %></dd>
        <dt>Rating</dt>
        <dd><%= review.rating %></dd>  
      </dl>
      </div>

    </div>
  <% end %>
  <% end %>
  </article>

</section>
